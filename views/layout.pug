doctype html
html(lang='es')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css' integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p' crossorigin='anonymous')
        link(rel='stylesheet', href='/css/normalize.css')
        link(rel='stylesheet', href='/css/app.css')
        title #{namePage}
    body
        header.barra
            h1 UpTask - Administrador de Proyectos
            a(href='#') Cerrar Sesi√≥n

        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href='/new-project').boton Nuevo Proyecto
                        span +
                .panel.lista-proyectos
                    h2 Proyectos
                    ul#proyectos.proyectos
                        if (projects)
                            each project in projects
                                li
                                    a(href=`/projects/${project.url}`) #{project.name}

            block content

            // Etiqueta para convertir el objeto projects en una cadena json
            // pre #{varDump(projects)}

        script(src='/dist/bundle.js')