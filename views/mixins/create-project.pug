mixin createProject(project = {})
    form.agregar-proyecto(action=`/new-project/${project.id || ''}` method='POST')
        .campo
            label(for="nombre") Nombre Proyecto
            input#nombre(value=project.name type='text' name='name' placeholder='Nombre del proyecto')
        .campo.enviar
            input(type='submit' value=`${project.name ? 'Guardar' : 'Agregar'}`).boton