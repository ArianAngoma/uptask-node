extends layout
block content
    .contenido-principal
        h1 #{namePage}

        if errors
            each error in errors
                .alerta.error #{error.msg}

        form.agregar-proyecto(action='/new-project' method='POST')
            .campo
                label(for="nombre") Nombre Proyecto
                input#nombre(type='text' name='name' placeholder='Nombre del proyecto')
            .campo.enviar
                input(type='submit' value='Agregar').boton